<h1>Friends</h1>
<div id="friends">
<table class="table" aria-describedby="friends table">
<thead>
<tr>
    <th scope="col">First name</th>
    <th scope="col">Last name</th>
    <th scope="col">Email</th>
    <th scope="col">Phone</th>
    <th scope="col">Facebook</th>
    <th scope="col">Instagram</th>
    <th scope="col">Twitter</th>
    <th scope="col">Action</th>

  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
  <tr>
      <td>
    
    <%= friend.first_name %>
  </td>

  <td>
    <%= friend.last_name %>
  </td>

  <td>
    <%= friend.email %>
  </td>

  <td>
    <%= friend.phone %>
  </td>

  <td>
    <%= friend.facebook %>
  </td>

  <td>
    <%= friend.instagram %>
  </td>

  <td>
    <%= friend.twitter %>
  </td>
    <td>
    
      <%= link_to "View", friend, class:"btn btn-warning" %>
    </td>
    </tr>
  <% end %>
  </tbody>
  </table>
</div>

<%= link_to "Add new friend", new_friend_path, class:'btn btn-primary' %>
