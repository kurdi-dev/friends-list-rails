<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p>
    <strong>Email:</strong>
    <%= @friend.email %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= @friend.phone %>
  </p>

  <p>
    <strong>Facebook:</strong>
    <%= @friend.facebook %>
  </p>

  <p>
    <strong>Instagram:</strong>
    <%= @friend.instagram %>
  </p>

  <p>
    <strong>Twitter:</strong>
    <%= @friend.twitter %>
  </p>
  <br/>

<%= link_to 'Back', friends_path, class:"btn btn-dark" %>
<%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-success" %>
<%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>


</div>